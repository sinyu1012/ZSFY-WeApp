  <view class="page__hd i-header">
    <view class="i-header-h1 h50">绑定教务系统账号，实时获取信息！</view>
    <view class="i-header-h1"></view>
  </view>

<form bindsubmit="formSubmit" bindreset="formReset">
<view class="input-group {{name_focus ? 'active' : ''}}">
            <text class="input-label">
              <text class="left">学</text>
              <text class="right">号</text>
            </text>
            <input id="name" name="username" data-name="name" confirm-type ="next" type="text" cursor-spacing="30"  value='20174630302014' placeholder="请输入学号" bindinput="checkInput" bindfocus="inputFocus" bindblur="inputBlur" />
        </view>
        <view class="input-group {{name_focus ? 'active' : ''}}">
            <text class="input-label">
              <text class="left">密</text>
              <text class="right">码</text>
            </text>
            <input id="name" name="paswd" data-name="name" confirm-type ="next" type="text" cursor-spacing="30"  value='320325199906303921' placeholder="请输入密码" bindinput="checkInput" bindfocus="inputFocus" bindblur="inputBlur" />
        </view>
  <!-- <view class="section">
