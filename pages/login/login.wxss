page{ 
 height: 100%; 
} 
 
.container { 
 height: 100%; 
 display: flex; 
 flex-direction: column; 
 padding: 0; 
 box-sizing: border-box; 
 background-color: #f2f2f2 
} 
 
/*登录图片*/ 
.login-icon{ 
 flex: none; 
} 
.login-img{ 
 width: 750rpx; 
} 
 
/*表单内容*/ 
.login-from { 
 margin-top: 20px; 
 flex: auto; 
 height:100%; 
} 
 
.inputView { 
 background-color: #fff; 
 line-height: 44px; 
 width: 750rpx; 
} 
/*输入框*/ 
.nameImage, .keyImage { 
 margin-left: 22px; 
 width: 14px; 
 height: 14px 
} 
 
.loginLab { 
 margin: 15px 15px 15px 10px; 
 color: #545454; 
 font-size: 14px 
} 
.inputText { 
 flex: block; 
 float: right; 
 text-align: left; 
 margin-right: 22px; 
 margin-top: 11px; 
 color: #cccccc; 
 font-size: 14px 
} 
 
.line { 
 width: 100%; 
 height: 1px; 
 background-color: #cccccc; 
 margin-top: 1px; 
} 
/*按钮*/ 
.loginBtnView { 
 width: 100%; 
 height: auto; 
 background-color: #f2f2f2; 
 margin-top: 0px; 
 margin-bottom: 0px; 
 padding-bottom: 0px; 
} 
 
.loginBtn { 
 width: 80%; 
 margin-top: 35px; 
} 

.section{border:1px solid #ccc;margin:10px auto;width:80%;font-size:14px;height:30px}
.section input{padding-left:15px;background-color: #fff;height:30px}
.section-yzm{border:1px solid #ccc;
 margin-left: 50px;width:100px;font-size:14px;background-color: #fff; height:40px }
.btn-area{width:80%;margin:0 auto;display:flex;}
.btn-area button{flex:1;max-width:40%;font-size:14px;background-color: #fff}
.reg{width:100%;text-align:center;margin-top:10px;font-size:14px;color:dodgerblue;}
.yzmImage { 
 margin-left: 22px; 
 width: 100px; 
 height:40px ;
} 
.content{  
  display: flex;  
  flex-direction: row;  
}  