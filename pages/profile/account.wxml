<import src="../../style/footer.wxml"  />

  <view>
  <view class="container" slot="qy-content">
    <view class="info-card">
      <view class="main-info">
        <view class="main-info-avatar" style="background-image:url({{avatar}})"></view>
         <view class="main-info-name">
          <!-- <image class="userinfo-avatar" src="{{userInfo.avatarUrl}}"></image> -->
          <view class="main-info-items" style="font-size:32rpx">{{userInfo.nickName}}</view>
          <view class="main-info-items" style="margin-top:15rpx">已绑定学号：{{xh}}</view>
        </view> 
      </view>
    </view>
    <view class="function-line">
      <view class="function-line-image" style="background-image:url('http://p37nq1juh.bkt.clouddn.com/userpage/mine_icon_help.png')"></view>
      <view bindtap="goFeedback" class="function-line-content">帮助与反馈
        <view class="function-line-arrow"></view>
      </view>
    </view>
    <view class="function-line">
      <view class="function-line-image" style="background-image:url('http://p37nq1juh.bkt.clouddn.com/userpage/mine_icon_about.png')"></view>
      <view bindtap="goAboutUs" class="function-line-content">关于我们
        <view class="function-line-arrow"></view>
      </view>
    </view>
    <view class="function-line">
      <view class="function-line-image" style="background-image:url('http://p37nq1juh.bkt.clouddn.com/userpage/mine_icon_changelog.png')"></view>
      <view bindtap="goShare" class="function-line-content">分享程序
        <view class="function-line-arrow"></view>
      </view>
    </view>
    <view bindtap="removeBind" class="cancel-bind">解除绑定</view>
  </view>
</view>
     <template is="foot"  /> 
