/* 工具导航 */
.tools-swiper {
  height: 400rpx;
  background: #ffffff;
}
.tools {
  display: flex;
  flex-flow: row wrap;
  align-content: flex-start;
  padding-bottom: 60rpx;
  background: #ffffff;
}
.tools__item {
  display: flex;
  flex-flow: column wrap;
  justify-content: center;
  align-items: center;
  box-sizing: border-box;
  width: 25%;
}
.tools__icon {
  display: block;
  width: 90rpx;
  height: 90rpx;
  margin: 25rpx auto 15rpx auto;
}
.tools__name {
  display: block;
  font-size: 10pt;
  font-weight: bold;
}

